.container
  .user-new
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      .col-md-8.col-md-offset-2
        %header.row.user-nav.row
          .col-md-12
            %h2 Register
            .user-name_image.row
              .user-name.col-md-10
                = f.text_field :user_name, placeholder: 'Username'
              .user-image.col-md-2
                %button.btn.btn-primary Add image
                %input{:type => "file"}/
            = f.email_field :email, placeholder: 'E-Mail'
            = f.password_field :password, placeholder: 'password', class: 'user-password'
          .col-md-12
            %h4 Member of
            .user-user-member.row
              .user-name.col-md-12
                = f.text_field :group_name, placeholder: 'Member'
            %h4 Profile
            .user-user-profile.row
              .user-name.col-md-12
                = f.text_field :profile, placeholder: 'Profile', :cols => '30', :rows => '4'
            %h4 Works
            .user-name_image.row
              .user-name.col-md-12
                = f.text_field :works, placeholder: 'Works', col: '30', rows: '4'
        .row.text-center.user-btn
          = f.submit 'Save', class: 'btn btn-lg btn-primary btn-block'
